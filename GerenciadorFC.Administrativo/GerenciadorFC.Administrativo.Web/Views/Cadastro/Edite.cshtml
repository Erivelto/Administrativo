
@model GerenciadorFC.Administrativo.Web.Models.Cadastro.PessoaViewModels

@{
	ViewData["Title"] = "Edite de Empresa";
}

<h4>@ViewData["Title"]</h4>

<form asp-action="Alterar">
	@if (ViewData.ModelState.IsValid)
	{
		<div class="alert alert-success alert-dismissible fade show" role="alert">
			<strong>Alterado com sucesso.</strong>
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
	}
	else
	{
		<div class="alert alert-error alert-dismissible fade show" role="alert">
			<strong>Erro na alteração</strong>
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
	}
	<div class="row">
		<div class="col-md-12">
			@*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
			<div class="row">
				<div class="form-group">
					<div class="col-sm-6">
						@Html.HiddenFor(m => m.CodigoEndereco)
						@Html.HiddenFor(m => m.CodigoPessoa)
						<label asp-for="Nome" class="control-label">@Html.DisplayNameFor(m => m.Nome)</label>
						@Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
						<span asp-validation-for="Nome" class="text-danger control-label"></span>
					</div>
					<label asp-for="Razao" class="control-label">@Html.DisplayNameFor(m => m.Razao)</label>
					<div class="col-sm-6">
						@Html.TextBoxFor(m => m.Razao, new { @class = "form-control" })
						<span asp-validation-for="Razao" class="text-danger"></span>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="form-group">
					<div class="col-sm-4">
						<label asp-for="Documento" class="control-label">@Html.DisplayNameFor(m => m.Documento)</label>
						@Html.TextBoxFor(m => m.Documento, new { @class = "form-control" })
						<span asp-validation-for="Documento" class="text-danger"></span>
					</div>
					<div class="col-sm-4">
						<label asp-for="IncricaoMunicipal" class="control-label">@Html.DisplayNameFor(m => m.IncricaoMunicipal)</label>
						@Html.TextBoxFor(m => m.IncricaoMunicipal, new { @class = "form-control" })
						<span asp-validation-for="IncricaoMunicipal" class="text-danger"></span>
					</div>
					<div class="col-sm-4">
						<label class="control-label">@Html.DisplayNameFor(m => m.DataAbertura)</label>
						<div class="form-group">
							<div class='input-group date'>
								<input type='text' asp-for="DataAbertura" class="form-control" />
								<span class="input-group-addon">
									<span class="glyphicon glyphicon-calendar"></span>
								</span>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="form-group">
					<div class="col-sm-6">
						<label asp-for="DescricaoAtividade" class="control-label">@Html.DisplayNameFor(m => m.DescricaoAtividade)</label>
						@Html.TextBoxFor(m => m.DescricaoAtividade, new { @class = "form-control" })
						<span asp-validation-for="DescricaoAtividade" class="text-danger"></span>
					</div>
					<div class="col-sm-6">
						<label asp-for="CNAE" class="control-label">@Html.DisplayNameFor(m => m.CNAE)</label>
						@Html.TextBoxFor(m => m.CNAE, new { @class = "form-control" })
						<span asp-validation-for="CNAE" class="text-danger"></span>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="form-group">
					<div class="col-sm-1">
						<label asp-for="TipoEnd" class="control-label">@Html.DisplayNameFor(m => m.TipoEnd)</label>
						@Html.TextBoxFor(m => m.TipoEnd, new { @class = "form-control" })
						<span asp-validation-for="TipoEnd" class="text-danger"></span>
					</div>
					<div class="col-sm-10">
						<label asp-for="Logradouro" class="control-label">@Html.DisplayNameFor(m => m.Logradouro)</label>
						@Html.TextBoxFor(m => m.Logradouro, new { @class = "form-control" })
						<span asp-validation-for="Logradouro" class="text-danger"></span>
					</div>
					<div class="col-sm-1">
						<label asp-for="Numrero" class="control-label">@Html.DisplayNameFor(m => m.Numrero)</label>
						@Html.TextBoxFor(m => m.Numrero, new { @class = "form-control" })
						<span asp-validation-for="Numrero" class="text-danger"></span>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="form-group">
					<div class="col-sm-4">
						<label asp-for="Complemento" class="control-label">@Html.DisplayNameFor(m => m.Complemento)</label>
						@Html.TextBoxFor(m => m.Complemento, new { @class = "form-control" })
						<span asp-validation-for="Complemento" class="text-danger"></span>
					</div>
					<div class="col-sm-4">
						<label asp-for="Bairro" class="control-label">@Html.DisplayNameFor(m => m.Bairro)</label>
						@Html.TextBoxFor(m => m.Bairro, new { @class = "form-control" })
						<span asp-validation-for="Bairro" class="text-danger"></span>
					</div>
					<div class="col-sm-4">
						<label asp-for="Cidade" class="control-label">@Html.DisplayNameFor(m => m.Cidade)</label>
						@Html.TextBoxFor(m => m.Cidade, new { @class = "form-control" })
						<span asp-validation-for="Cidade" class="text-danger"></span>
					</div>
				</div>
			</div>
			<div class="row">

				<div class="form-group">
					<div class="col-sm-1">
						<label asp-for="UF" class="control-label">@Html.DisplayNameFor(m => m.UF)</label>
						@Html.TextBoxFor(m => m.UF, new { @class = "form-control" })
						<span asp-validation-for="UF" class="text-danger"></span>
					</div>
					<div class="col-sm-3">
						<label asp-for="CEP" class="control-label">@Html.DisplayNameFor(m => m.CEP)</label>
						@Html.TextBoxFor(m => m.CEP, new { @class = "form-control" })
						<span asp-validation-for="CEP" class="text-danger"></span>
					</div>
					<div class="col-sm-4">
						<label asp-for="TipoPessoa" class="control-label">Tipo</label>
						<select id="TipoPessoa" asp-for="TipoPessoa" class="form-control">
							<option value="0">Serviço</option>
							@if (Model.TipoPessoa == 1)
							{
								<option selected="selected" value="1">Comércio</option>
							}
							else
							{
								<option value="1">Comércio</option>
							}

						</select>
						<span asp-validation-for="TipoPessoa" class="text-danger"></span>
					</div>
					<div class="col-sm-4">
						<label class="control-label"></label>
					</div>
				</div>
			</div>
		</div>

	</div>

	<br />
	<br />
	@if (Model.CodigoPessoa != 0)
	{
		<div class="accordion" id="accordionFisc" role="tablist" aria-multiselectable="true">
			<div class="panel">
				<a class="panel-heading collapsed" role="tab" id="headingTwo" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
					<h4 class="panel-title">Dados do Robô</h4>
				</a>
				<div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
					<div class="panel-body">
						<h4>Emissão da nota</h4>
						<div class="row">
							<div class="col-md-12">
								@Html.Partial("_DadosFiscaisNovo", Model.pessoaEmissaoNFeViewModels)
							</div>
						</div>
						@if (Model.listapessoaEmissaoNFeViewModels != null)
						{
							<div class="row">
								<div class="col-md-12" id="PartialContainer">
									@Html.Partial("_ListDadosFiscaisNovo", Model.listapessoaEmissaoNFeViewModels)
								</div>
							</div>
						}

					</div>
					<div class="panel-body">
						<h4>Gerar DAS</h4>
						<div class="row">
							<div class="col-md-12">
								@Html.Partial("_DadosDAS", Model.dadosDeDAS)
							</div>
						</div>
						<div class="row">
							@if (ViewData["DadosDeDASViewModels"] != null)
							{
								<div class="col-sm-12">
									@Html.Partial("_ListaDadosDAS", (object)ViewData["DadosDeDASViewModels"])
								</div>
							}
						</div>
					</div>
				</div>
			</div>
		</div>
	}
	<br />
	<br />
	<br />
	<div class="row">
		<div class="col-md-12">
			<div class="form-group">
				<div class="rodape-form">
					<a class="btn btn-info" href="@Url.Action("Lista","Cadastro")" title="">Voltar</a>
					<input type="submit" name="submit" class="btn btn-success" value="Salvar" />
					<a class="btn btn-info" href="@Url.Action("CadRepLegal","CadastroRepLegal",new { codigoPessoa = Model.CodigoPessoa})" title="">Representante Legal</a>
				</div>
			</div>
		</div>
	</div>
</form>
