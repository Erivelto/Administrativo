@model List<GerenciadorFC.Administrativo.Web.Models.CadastroViewModels.ListaPessoaViewModels>

@{
	ViewData["Title"] = "Clientes";
}

<h4>Clientes</h4>


<div class="row">
	<div class="col-sm-12">
		<div class="table-responsive">
			<table id="datatable" class="table table-striped jambo_table bulk_action">
				<thead>
					<tr class="headings">
						<th class="column-title">Codigo </th>
						<th class="column-title">CNPJ </th>
						<th class="column-title">Nome Fantasia </th>
						<th class="column-title">Razão Social</th>
						<th class="column-title">Data Contfy </th>
						<th class="column-title"></th>
						<th class="column-title"></th>
						<th class="column-title"></th>
					</tr>
				</thead>

				<tbody>
					@foreach (var list in Model)
					{
					<tr class="even pointer">
						<td>
							<span>@list.Codigo</span>
						</td>
						<td>
							<span>@list.Documento</span>
						</td>
						<td>
							<span>@list.Nome</span>
						</td>
						<td>
							<span>@list.Razao</span>
						</td>
						<td>
							<span>@list.DataInclusao</span>
						</td>
						<td>
							<a href="@Url.Action("Edite","Cadastro", new { pessoa = list.Codigo})"><i class="fa fa-edit"></i></a>
						</td>
						<td>
							<a href="@Url.Action("Lista","Cadastro")"><i class="fa fa-remove"></i></a>
						</td>
						<td>
							<a href="@Url.Action("Ativar","Cadastro",new { codigo = list.Codigo})"><i class="fa fa-check"></i></a>
						</td>
					</tr>
					}

				</tbody>
			</table>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<div class="form-group">
			<div class="rodape-form">
				<a class="btn btn-info" href="@Url.Action("Novo","Cadastro")" title="">Adicionar</a>				
			</div>
		</div>
	</div>
</div>
